    <div class="formulario-pantallas" style="height: 90%">
        <img src="~/images/encaUsuarios.png" style="max-height: 20%" />
        <hr />
        <h7 id="accionEstatus" style="top: -5%"></h7>
        <form id="screenForm" asp-controller="ControlUsuarios" asp-action="Usuarios" style="margin-top: -4%">
            <nav class="main-menu">
                <ul>
                    <li>
                        <button id="boton1" class="botones-menu-lateral" title="Nuevo" type="button" onclick="formEnable(1, 1, 1, 1, 1, 1, 1, 1); buttonsEnable(1, 0, 1, 0, 0, 1); modifyReturn(0)">
                            <i class="fa fa-plus fa-2x"></i>
                        </button>
                    </li>
                    <li class="has-subnav">
                        <button id="boton2" class="botones-menu-lateral" disabled title="Eliminar" type="button" onclick="deleteSubmit()">
                            <i class="fa fa-trash-o fa-2x"></i>
                        </button>
                    </li>
                    <li class="has-subnav">
                        <button id="boton3" class="botones-menu-lateral" disabled title="Guardar" type="button" onclick="approveSubmit()">
                            <i class="fa fa-floppy-disk fa-2x"></i>
                        </button>
                    </li>
                    <li class="has-subnav">
                        <button id="boton4" class="botones-menu-lateral" title="Búsqueda" type="button" onclick="displayList(); filterTable()">
                            <i class="fa fa-magnifying-glass fa-2x"></i>
                        </button>
                    </li>
                    <li class="has-subnav">
                        <button id="boton5" class="botones-menu-lateral" title="Reporte" type="button" onclick="exportPDF('tablaPDF')">
                            <i class="fa fa-book fa-2x"></i>
                        </button>
                    </li>
                    <li>
                        <button asp-controller="ControlUsuarios" asp-action="Index" id="boton6" class="botones-menu-lateral boton-regresar" title="Regresar">
                            <i class="fa fa-arrow-left fa-2x"></i>
                        </button>
                    </li>
                </ul>
            </nav>
            <div id="form" style="height: 360px; margin-left: 25%; margin-top: 4%; width: 50%">
                <div class="inputBox" id="inputField1Box" style="top: 5%">
                    <textarea name="clave" rows="1" disabled id="inputField1" maxlength="12" required></textarea><i>Clave</i>
                </div>
                <div class="inputBox" style="top: 5%">
                    <textarea name="nombre" rows="1" disabled id="inputField2" maxlength="50" required></textarea><i>Nombre</i>
                </div>
                <div class="inputBox" style="top: 5%">
                    <textarea name="correo" rows="1" disabled id="inputField3" maxlength="50" required></textarea><i>Correo</i>
                </div>
                <div class="inputBox" style="top: 5%">
                    <input name="contrasena" rows="1" type="password" disabled id="inputField4" maxlength="12" required/><i>Contraseña</i>
                </div>
                <div class="inputBox" style="top: 7%">
                    <input name="verificarContrasena" rows="1" type="password" disabled id="inputField5" maxlength="12" required /><i>Confirmar Contraseña</i>
                </div>
            </div>
            <input id="estatusInput" name="estatus" type="text" value="1" hidden />
        </form>
    </div>
    <div id="tablaPDF">
        <div id="listModal" class="modal">
            <div class="listModal-content">
                <span id="closeButton" class="closeList">&times;</span>
                <div id="contenedorTituloTabla">
                    <img id="encabezadoBusqueda" src="~/images/encaBusquedaSelec.png"/>
                </div>
                <hr />
                <input id="searchBar" type="text" placeholder="Buscar" />
                <label for="filtro">Filtrar por:</label>
                <select name="filtro" id="selectFiltro">
                    <option value="claveTabla">clave</option>
                    <option value="descripcionTabla">nombre</option>
                    <option value="comentarioTabla">correo</option>
                </select>
                <button type="button" id="exportExcel" onclick="tableToCSV()" class="">Exportar a Excel</button><br />
                <br />
                <table id="tablaPantallas" class="tableStyle">
                    <thead>
                        <tr id="encabezados">
                            <th>Clave</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td id="claveTabla">@item.Clave</td>
                                <td id="descripcionTabla">@item.Nombre</td>
                                <td id="comentarioTabla">@item.Correo</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</section>
