            <nav class="main-menu">
                <ul>
                    <li class="has-subnav">
                        <button id="boton9" class="botones-menu-lateral" title="Guardar" type="button" onclick="sendCheckBoxes()">
                            <i class="fa fa-floppy-disk fa-2x"></i>
