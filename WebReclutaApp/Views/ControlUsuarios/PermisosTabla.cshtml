                    <label for="clave" style="margin-top: 1.5%">Usuario:</label>
                    <input name="clave" id="inputField1" style="width: 10%" value="@ViewBag.Clave" readonly />
                    <input name="clave" type="hidden" value="@ViewBag.Clave"/>
                    <input name="nombre" id="inputField2" style="margin-left: 20px" value="@ViewBag.Name" readonly />
                </div>
                <div id="tablaPDF" style="margin-top: 10px; margin-left: 2.5%; width: 95%; height: 120%">
                    <table id="tablaCheck" class="tableStyle">
                        <thead>
                            <tr id="encabezados">
                                <th style="width: 10%">Clave Pantalla</th>
                                <th style="width: 10%">Pantalla</th>
                                <th>Alta</th>
                                <th>Baja</th>
                                <th>Act</th>
                                <th>Rep</th>
                                <th>Cons</th>
                                <th>Otros</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td id="claveTabla">@item.ClavePantalla</td>
                                    <td id="descripcionTabla"><input name="pantalla" type="hidden" value="@item.ClavePantalla"/>@item.Pantalla</td>
                                    <td id="altaTabla"><input class="field1" name="alta" type="checkbox" value="1" @item.Alta onchange="checkUncheck(this)"/></td>
                                    <td id="bajaTabla"><input class="field2" name="baja" type="checkbox" value="1" @item.Baja onchange="checkUncheck(this)" /></td>
                                    <td id="actTabla"><input class="field3" name="act" type="checkbox" value="1" @item.Act onchange="checkUncheck(this)" /></td>
                                    <td id="repTabla"><input class="field4" name="reporte" type="checkbox" value="1" @item.Reporte onchange="checkUncheck(this)" /></td>
                                    <td id="consTabla"><input class="field5" name="consulta" type="checkbox" value="1" @item.Consulta onchange="checkUncheck(this)" /></td>
                                    <td id="otrosTabla"><input class="field6" name="otros" type="checkbox" value="1" @item.Otros onchange="checkUncheck(this)" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
            <input id="estatusInput" name="estatus" type="text" value="1" hidden />
