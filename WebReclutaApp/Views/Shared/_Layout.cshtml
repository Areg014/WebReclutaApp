            <li class="has-subnav">
                <a href="#">
                    <i class="fa fa-comments fa-2x"></i>
                    <span class="nav-text">
                        Solicitudes y Contrataciones
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="#">
                    <i class="fa fa-user fa-2x"></i>
                    <span class="nav-text">
                        Gestión de Enpleados
                    </span>
                </a>

            </li>
            <li>
                <a href="#">
                    <i class="fa fa-book fa-2x"></i>
                    <span class="nav-text">
                        Reportes
                    </span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-folder-open fa-2x"></i>
                    <span class="nav-text">
                        Archivos Digitales
                    </span>
                </a>
            </li>-->
            <li>
                <a asp-controller="ControlUsuarios" asp-action="Index">
                    <i class="fa fa-users fa-2x"></i>
                    <span class="nav-text">
                        Control de Usuarios
                    </span>
                </a>
            </li>
            <li>
                <a asp-controller="ConfiguracionGeneral" asp-action="Index">
                    <i class="fa fa-cogs fa-2x"></i>
                    <span class="nav-text">
                        Configuración General
                    </span>
                </a>
            </li>
        </ul>
        <ul class="logout">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="fa fa-power-off fa-2x"></i>
                    <span class="nav-text">
                        Cerrar sesión
                    </span>
                </a>
            </li>
        </ul>
    </nav>
    <div>
        <main role="main">
            @RenderBody()
            <script>
            </script>
        </main>
    </div>
    <nav class="right-bar"></nav>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Andrés Regalado Rosas
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
